<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">MyWebApp</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Query">Query</a>
                        </li>
                    </ul>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-page="/Index" asp-page-handler="Logout" class="d-flex">
                            <span class="navbar-text me-2">Welcome, @User.Identity.Name</span>
                            <button class="btn btn-danger btn-sm" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" href="/Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - MyWebApp
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
