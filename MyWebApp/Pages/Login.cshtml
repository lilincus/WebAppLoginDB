@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h2 class="text-center mb-4 fw-bold">Login</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg mt-3">Login</button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
